
#header
  text-shadow 0 0 1px #fff
  margin 50px auto 0 auto
  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1
    margin-left: 60px
    @media screen and (max-width: 600px)
      margin-left: 0px

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        float left
        margin-left 30px
    @media screen and (max-width: 600px)
      ul
        width 100px
        height 30px
        
        
        background url(http://webdesignerwall.com/demo/responsive-menu/images/icon-menu.png) no-repeat 10px11px
        li
          float none
          display none
      ul:hover
        width 100px
        height auto
        padding 5px 0
       
        border solid 1px #aaa
          
        border-radius 5px
        box-shadow 0 1px 2px rgba(0,0,0,.3)
        background none
        li 
          display block
        
      